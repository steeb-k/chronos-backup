<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Chronos.App.Views.BackupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Chronos.App.Views"
    xmlns:converters="using:Chronos.App.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer Padding="24,20,24,20"
                   HorizontalScrollBarVisibility="Disabled"
                   HorizontalAlignment="Stretch">
        <StackPanel Spacing="24" HorizontalAlignment="Stretch">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Create Backup" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Create a disk or partition image backup with optional compression and verification."
                           Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7" />
            </StackPanel>

            <!-- Source Selection -->
            <StackPanel Spacing="12" Visibility="{Binding IsInputEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="SOURCE" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />
                <StackPanel Spacing="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <InfoBar x:Name="DiskInfoBar" IsOpen="True" IsClosable="False" Severity="Informational"
                             Title="Select a source disk or partition to back up."
                             Message="Available disks are listed below. Select Entire disk or choose a specific partition." />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="DiskCombo" Header="Disk" HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding AvailableDisks}"
                                  SelectedItem="{Binding SelectedDisk, Mode=TwoWay}"
                                  PlaceholderText="Select a disk..." />
                        <Button Grid.Column="1" VerticalAlignment="Bottom" Margin="8,0,0,0"
                                Command="{Binding LoadDisksCommand}" ToolTipService.ToolTip="Refresh disk list">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        </Button>
                    </Grid>

                    <!-- Disk partition map -->
                    <local:DiskMapControl x:Name="SourceDiskMap" Margin="0,4,0,0" />

                    <ComboBox x:Name="PartitionCombo" Header="Partition" HorizontalAlignment="Stretch"
                              ItemsSource="{Binding AvailablePartitions}"
                              SelectedItem="{Binding SelectedPartition, Mode=TwoWay}"
                              PlaceholderText="Select a partition..."
                              IsEnabled="{Binding HasPartitions}" />
                </StackPanel>
            </StackPanel>

            <!-- Destination -->
            <StackPanel Spacing="12" Visibility="{Binding IsInputEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="DESTINATION" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <TextBox Header="Backup Name" 
                             Text="{Binding BackupName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="e.g., My Laptop Backup" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Header="Target Drive" HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding AvailableTargetDrives}"
                                  SelectedItem="{Binding SelectedTargetDrive, Mode=TwoWay}"
                                  PlaceholderText="Select target drive..." />
                        <Button Grid.Column="1" VerticalAlignment="Bottom" Margin="8,0,0,0"
                                Command="{Binding LoadTargetDrivesCommand}" ToolTipService.ToolTip="Refresh drive list">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        </Button>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Options -->
            <StackPanel Spacing="12" Visibility="{Binding IsInputEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="OPTIONS" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <ToggleSwitch Header="Use Volume Shadow Copy (VSS)" IsOn="True"
                                  OnContent="Enabled â€” consistent snapshot" OffContent="Disabled" />

                    <ToggleSwitch Header="Verify after backup" IsOn="True"
                                  OnContent="Will verify integrity" OffContent="Skip verification" />
                </StackPanel>
            </StackPanel>

            <!-- Backup In Progress Info (shown when backup is running) -->
            <StackPanel Spacing="12" Visibility="{Binding IsBackupInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="BACKUP IN PROGRESS" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />
                <StackPanel Spacing="8"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <InfoBar IsOpen="True" IsClosable="False" Severity="Informational"
                             Title="Backup operation is in progress">
                        <InfoBar.Content>
                            <StackPanel Spacing="4">
                                <TextBlock>
                                    <Run Text="Source: " FontWeight="SemiBold" />
                                    <Run Text="{Binding ActiveBackupSourceDescription}" />
                                </TextBlock>
                                <TextBlock TextWrapping="Wrap">
                                    <Run Text="Destination: " FontWeight="SemiBold" />
                                    <Run Text="{Binding ActiveBackupDestinationPath}" />
                                </TextBlock>
                            </StackPanel>
                        </InfoBar.Content>
                    </InfoBar>
                </StackPanel>
            </StackPanel>

            <!-- Progress -->
            <StackPanel x:Name="ProgressPanel" Spacing="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="8" Padding="20">
                <TextBlock Text="Backup Progress" FontWeight="SemiBold" />
                <ProgressBar x:Name="BackupProgress" Minimum="0" Maximum="100" Value="{Binding ProgressPercentage}" />
                <Grid>
                    <TextBlock x:Name="ProgressStatus" Text="{Binding StatusMessage}" Opacity="0.6" />
                    <TextBlock x:Name="ProgressPercent" Text="{Binding ProgressText}" HorizontalAlignment="Right" Opacity="0.6" />
                </Grid>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Margin="0,8,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="StartBackupBtn" Style="{StaticResource AccentButtonStyle}"
                        Content="Start Backup" Padding="24,10" 
                        IsEnabled="{Binding CanStartBackup}"
                        Command="{Binding StartBackupCommand}" />
                <Button Grid.Column="1" Content="Cancel" Padding="24,10" Margin="8,0,0,0"
                        IsEnabled="{Binding IsBackupInProgress}"
                        Command="{Binding CancelBackupCommand}" />
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>
