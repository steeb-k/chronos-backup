<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Chronos.App.Views.BrowsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Chronos.App.Converters"
    xmlns:local="using:Chronos.App.Views"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer Padding="24,20,24,20"
                   HorizontalScrollBarVisibility="Disabled"
                   HorizontalAlignment="Stretch">
        <StackPanel Spacing="24" HorizontalAlignment="Stretch">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Mount" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Mount disk images as virtual drives to browse their contents."
                           Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7" />
            </StackPanel>

            <!-- Image File -->
            <StackPanel Spacing="12" HorizontalAlignment="Stretch">
                <TextBlock Text="IMAGE FILE" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="12" HorizontalAlignment="Stretch"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Header="Image file path" PlaceholderText="Select a .vhdx image..."
                                 Text="{Binding ImagePath, Mode=TwoWay}" />
                        <Button Grid.Column="1" Content="Browse..." VerticalAlignment="Bottom" Margin="8,0,0,0"
                                Click="OnBrowseImageClick" />
                    </Grid>

                    <!-- Source image partition map (from sidecar) -->
                    <local:DiskMapControl x:Name="SourceDiskMap" Margin="0,4,0,0" />
                </StackPanel>
            </StackPanel>

            <!-- Mount Options -->
            <StackPanel Spacing="12" HorizontalAlignment="Stretch">
                <TextBlock Text="MOUNT OPTIONS" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16" HorizontalAlignment="Stretch"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <ToggleSwitch Header="Mount read-only" IsOn="{Binding MountReadOnly, Mode=TwoWay}"
                                  OnContent="Read-only (safe)" OffContent="Read-write (allows modifications)" />
                </StackPanel>
            </StackPanel>

            <!-- Status -->
            <StackPanel Spacing="12" HorizontalAlignment="Stretch">
                <TextBlock Text="STATUS" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16" HorizontalAlignment="Stretch"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="{Binding IsMounted, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=glyph}"
                                  FontSize="32" Margin="0,0,16,0" Opacity="0.4"
                                  x:Name="StatusIcon" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="StatusTitle" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding StatusMessage}" Opacity="0.6" FontSize="13" TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <!-- Actions -->
            <Grid Margin="0,8,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource AccentButtonStyle}"
                        Content="Mount" Padding="24,10"
                        Command="{Binding MountToDriveLetterCommand}" />
                <Button Grid.Column="1" Content="Dismount" Padding="24,10" Margin="8,0,0,0"
                        Command="{Binding DismountCommand}" />
                <Button Grid.Column="3" Content="Open in Explorer" Padding="24,10"
                        Command="{Binding OpenInExplorerCommand}" />
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>
