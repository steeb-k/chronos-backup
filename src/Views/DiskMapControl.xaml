<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Chronos.App.Views.DiskMapControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Subtle partition border brush -->
        <SolidColorBrush x:Key="PartitionBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}" />
    </UserControl.Resources>

    <StackPanel Spacing="6">
        <!-- Header row: Partition style * Model * Serial -->
        <TextBlock x:Name="HeaderText"
                   FontSize="12" FontWeight="SemiBold" Opacity="0.7"
                   TextTrimming="CharacterEllipsis" />

        <!-- Partition blocks container -->
        <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1" CornerRadius="4"
                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
            <Grid x:Name="PartitionGrid" />
        </Border>

        <!-- "No partitions" fallback -->
        <TextBlock x:Name="EmptyText" Text="No partition information available"
                   Visibility="Collapsed"
                   FontSize="12" Opacity="0.4" HorizontalAlignment="Center" Margin="0,4,0,0" />
    </StackPanel>
</UserControl>
