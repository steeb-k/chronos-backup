<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Chronos.App.Views.OptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Chronos.App.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer Padding="24,20,24,20"
                   HorizontalScrollBarVisibility="Disabled"
                   HorizontalAlignment="Stretch">
        <StackPanel Spacing="24" HorizontalAlignment="Stretch">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Options" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Configure application settings and preferences."
                           Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7" />
            </StackPanel>

            <!-- About -->
            <StackPanel Spacing="12">
                <TextBlock Text="ABOUT" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE7F1;" FontSize="32" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Chronos" FontWeight="Bold" FontSize="18" />
                            <TextBlock Text="Modern Disk Imaging Utility" Opacity="0.6" />
                        </StackPanel>
                    </StackPanel>

                    <MenuFlyoutSeparator Margin="0,4" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Version" Opacity="0.6" Grid.Row="0" />
                        <TextBlock Text="{x:Bind ViewModel.CurrentVersion, Mode=OneWay}" Grid.Row="0" Grid.Column="1" />

                        <TextBlock Text="Developer" Opacity="0.6" Grid.Row="1" />
                        <TextBlock Text="KZNJK.net" Grid.Row="1" Grid.Column="1" />

                        <TextBlock Text="GitHub" Opacity="0.6" Grid.Row="2" />
                        <HyperlinkButton Content="github.com/steeb-k/chronos-backup"
                                         NavigateUri="https://github.com/steeb-k/chronos-backup"
                                         Padding="0" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" />

                        <TextBlock Text="License" Opacity="0.6" Grid.Row="3" />
                        <TextBlock Text="GPLv3" Grid.Row="3" Grid.Column="1" />

                        <TextBlock Text="Runtime" Opacity="0.6" Grid.Row="4" />
                        <TextBlock Text=".NET 10 + WinUI 3" Grid.Row="4" Grid.Column="1" />
                    </Grid>

                    <MenuFlyoutSeparator Margin="0,4" />

                    <!-- Update Section -->
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="Check for Updates"
                                    Command="{x:Bind ViewModel.CheckForUpdatesCommand}"
                                    IsEnabled="{x:Bind ViewModel.IsCheckingForUpdates, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />
                            <ProgressRing IsActive="{x:Bind ViewModel.IsCheckingForUpdates, Mode=OneWay}"
                                          Width="20" Height="20" 
                                          Visibility="{x:Bind ViewModel.IsCheckingForUpdates, Mode=OneWay}" />
                        </StackPanel>

                        <TextBlock Text="{x:Bind ViewModel.UpdateStatusMessage, Mode=OneWay}"
                                   Opacity="0.8"
                                   Visibility="{x:Bind ViewModel.UpdateStatusMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />

                        <Button Content="Download Update"
                                Command="{x:Bind ViewModel.DownloadAndInstallUpdateCommand}"
                                Style="{ThemeResource AccentButtonStyle}"
                                Visibility="{x:Bind ViewModel.IsUpdateAvailable, Mode=OneWay}"
                                IsEnabled="{x:Bind ViewModel.IsDownloadingUpdate, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}" />

                        <StackPanel Spacing="8"
                                    Visibility="{x:Bind ViewModel.IsDownloadingUpdate, Mode=OneWay}">
                            <ProgressBar Value="{x:Bind ViewModel.DownloadProgress, Mode=OneWay}"
                                         Minimum="0" Maximum="100" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Backup Defaults -->
            <StackPanel Spacing="12">
                <TextBlock Text="BACKUP DEFAULTS" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Header="Default backup drive" HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding AvailableTargetDrives}"
                                  SelectedItem="{Binding SelectedDefaultBackupDrive, Mode=TwoWay}"
                                  PlaceholderText="Select a drive..." />
                        <Button Grid.Column="1" VerticalAlignment="Bottom" Margin="8,0,0,0"
                                Command="{Binding LoadTargetDrivesCommand}" ToolTipService.ToolTip="Refresh drive list">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        </Button>
                    </Grid>

                    <StackPanel>
                        <TextBlock Text="Default compression level" Margin="0,0,0,4" />
                        <Slider Minimum="1" Maximum="19"
                                Value="{Binding DefaultCompressionLevel, Mode=TwoWay}"
                                StepFrequency="1" TickFrequency="1" SnapsTo="Ticks" />
                    </StackPanel>

                    <ToggleSwitch Header="Use VSS by default"
                                  IsOn="{Binding UseVssByDefault, Mode=TwoWay}" />
                    <ToggleSwitch Header="Verify after backup by default"
                                  IsOn="{Binding VerifyByDefault, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>

            <!-- Appearance -->
            <StackPanel Spacing="12">
                <TextBlock Text="APPEARANCE" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <RadioButtons Header="Theme" x:Name="ThemeRadioButtons"
                                  SelectedIndex="{Binding ThemeMode, Mode=TwoWay}">
                        <RadioButton Content="Use system setting" />
                        <RadioButton Content="Light" />
                        <RadioButton Content="Dark" />
                    </RadioButtons>
                </StackPanel>
            </StackPanel>

            <Grid Height="24" /> <!-- Bottom spacer -->

        </StackPanel>
    </ScrollViewer>
</Page>
