<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Chronos.App.Views.OptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24,20,24,20"
                   HorizontalScrollBarVisibility="Disabled"
                   HorizontalAlignment="Stretch">
        <StackPanel Spacing="24" HorizontalAlignment="Stretch">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Options" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Configure application settings and preferences."
                           Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7" />
            </StackPanel>

            <!-- Backup Defaults -->
            <StackPanel Spacing="12">
                <TextBlock Text="BACKUP DEFAULTS" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Header="Default backup drive" HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding AvailableTargetDrives}"
                                  SelectedItem="{Binding SelectedDefaultBackupDrive, Mode=TwoWay}"
                                  PlaceholderText="Select a drive..." />
                        <Button Grid.Column="1" VerticalAlignment="Bottom" Margin="8,0,0,0"
                                Command="{Binding LoadTargetDrivesCommand}" ToolTipService.ToolTip="Refresh drive list">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        </Button>
                    </Grid>

                    <StackPanel>
                        <TextBlock Text="Default compression level" Margin="0,0,0,4" />
                        <Slider Minimum="1" Maximum="19"
                                Value="{Binding DefaultCompressionLevel, Mode=TwoWay}"
                                StepFrequency="1" TickFrequency="1" SnapsTo="Ticks" />
                    </StackPanel>

                    <ToggleSwitch Header="Use VSS by default"
                                  IsOn="{Binding UseVssByDefault, Mode=TwoWay}" />
                    <ToggleSwitch Header="Verify after backup by default"
                                  IsOn="{Binding VerifyByDefault, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>

            <!-- Appearance -->
            <StackPanel Spacing="12">
                <TextBlock Text="APPEARANCE" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <RadioButtons Header="Theme" x:Name="ThemeRadioButtons"
                                  SelectedIndex="{Binding ThemeMode, Mode=TwoWay}">
                        <RadioButton Content="Use system setting" />
                        <RadioButton Content="Light" />
                        <RadioButton Content="Dark" />
                    </RadioButtons>
                </StackPanel>
            </StackPanel>

            <!-- About -->
            <StackPanel Spacing="12">
                <TextBlock Text="ABOUT" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE7F1;" FontSize="32" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Chronos" FontWeight="Bold" FontSize="18" />
                            <TextBlock Text="Modern Disk Imaging Utility" Opacity="0.6" />
                        </StackPanel>
                    </StackPanel>

                    <MenuFlyoutSeparator Margin="0,4" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Version" Opacity="0.6" Grid.Row="0" />
                        <TextBlock Text="1.0.0" Grid.Row="0" Grid.Column="1" />

                        <TextBlock Text="License" Opacity="0.6" Grid.Row="1" />
                        <TextBlock Text="GPLv3" Grid.Row="1" Grid.Column="1" />

                        <TextBlock Text="Runtime" Opacity="0.6" Grid.Row="2" />
                        <TextBlock Text=".NET 10 + WinUI 3" Grid.Row="2" Grid.Column="1" />
                    </Grid>
                </StackPanel>
            </StackPanel>

            <Grid Height="24" /> <!-- Bottom spacer -->

        </StackPanel>
    </ScrollViewer>
</Page>
