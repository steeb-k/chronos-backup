<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Chronos.App.Views.RestorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Chronos.App.Converters"
    xmlns:local="using:Chronos.App.Views"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer Padding="24,20,24,20"
                   HorizontalScrollBarVisibility="Disabled"
                   HorizontalAlignment="Stretch">
        <StackPanel Spacing="24" HorizontalAlignment="Stretch">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Restore Image" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Restore a previously created disk image to a target disk or partition."
                           Style="{StaticResource BodyTextBlockStyle}" Opacity="0.7" />
            </StackPanel>

            <!-- Source Image -->
            <StackPanel Spacing="12">
                <TextBlock Text="SOURCE IMAGE" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Header="Image file"
                             Text="{Binding SourceImagePath, Mode=TwoWay}"
                             PlaceholderText="Select a .vhdx image file..." />
                        <Button Grid.Column="1" Content="Browse..." VerticalAlignment="Bottom" Margin="8,0,0,0"
                            Click="OnBrowseImageClick" />
                    </Grid>

                    <!-- Image metadata card -->
                    <StackPanel x:Name="MetadataPanel" Visibility="Collapsed" Spacing="4"
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                CornerRadius="6" Padding="16,12">
                        <TextBlock Text="Image Details" FontWeight="SemiBold" FontSize="13" />
                        <TextBlock Text="Created: —" Opacity="0.7" FontSize="12" />
                        <TextBlock Text="Original size: —" Opacity="0.7" FontSize="12" />
                        <TextBlock Text="Compressed: —" Opacity="0.7" FontSize="12" />
                        <TextBlock Text="Compression: Zstandard (level 3)" Opacity="0.7" FontSize="12" />
                    </StackPanel>

                    <!-- Source image partition map (from sidecar) -->
                    <local:DiskMapControl x:Name="SourceDiskMap" Margin="0,4,0,0" />

                    <!-- Source partition selector (visible when image has 2+ partitions) -->
                    <ComboBox x:Name="SourcePartitionCombo"
                              Header="Restore scope"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding AvailableSourcePartitions}"
                              SelectedItem="{Binding SelectedSourcePartition, Mode=TwoWay}"
                              Visibility="{Binding HasSourcePartitions, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </StackPanel>

            <!-- Target Disk -->
            <StackPanel Spacing="12">
                <TextBlock Text="TARGET" FontWeight="SemiBold" FontSize="12" Opacity="0.5"
                           CharacterSpacing="80" />

                <StackPanel Spacing="12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">

                    <InfoBar IsOpen="True" IsClosable="False" Severity="Warning"
                             Title="Warning"
                             Message="Restoring an image will OVERWRITE all data on the selected target. This cannot be undone." />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Header="Target disk" HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding AvailableDisks}"
                                  SelectedItem="{Binding SelectedTargetDisk, Mode=TwoWay}"
                                  PlaceholderText="Select target disk..." />
                        <Button Grid.Column="1" VerticalAlignment="Bottom" Margin="8,0,0,0"
                                Command="{Binding LoadDisksCommand}" ToolTipService.ToolTip="Refresh disk list">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" />
                        </Button>
                    </Grid>

                    <!-- Target disk partition map -->
                    <local:DiskMapControl x:Name="TargetDiskMap" Margin="0,4,0,0" />

                    <ComboBox Header="Target partition" HorizontalAlignment="Stretch"
                              ItemsSource="{Binding AvailableTargetPartitions}"
                              SelectedItem="{Binding SelectedTargetPartition, Mode=TwoWay}"
                              IsEnabled="{Binding HasTargetPartitions}" />

                    <ToggleSwitch Header="Verify during restore" IsOn="{Binding VerifyDuringRestore, Mode=TwoWay}"
                                  OnContent="Integrity check active" OffContent="Skip verification" />
                </StackPanel>
            </StackPanel>

            <!-- Progress -->
            <StackPanel x:Name="ProgressPanel" Spacing="8"
                        Visibility="{Binding IsRestoreInProgress, Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1" CornerRadius="8" Padding="20">
                <TextBlock Text="Restore Progress" FontWeight="SemiBold" />
                <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProgressPercentage}" />
                <Grid>
                    <TextBlock Text="{Binding StatusMessage}" Opacity="0.6" TextWrapping="Wrap" />
                    <TextBlock Text="{Binding ProgressPercentage}" HorizontalAlignment="Right" Opacity="0.6" />
                </Grid>
            </StackPanel>

            <!-- Status message (always visible when non-empty, including after errors) -->
            <InfoBar x:Name="StatusInfoBar" IsOpen="{Binding HasStatusMessage}" IsClosable="True"
                     Title="{Binding StatusInfoBarTitle}"
                     Message="{Binding StatusMessage}" />

            <!-- Action -->
            <Grid Margin="0,8,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource AccentButtonStyle}"
                        Content="Start Restore" Padding="24,10" 
                        IsEnabled="{Binding CanStartRestore}"
                        Command="{Binding StartRestoreCommand}" />
                <Button Grid.Column="1" Content="Cancel" Padding="24,10" Margin="8,0,0,0"
                        IsEnabled="{Binding IsRestoreInProgress}"
                        Command="{Binding CancelRestoreCommand}" />
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>
